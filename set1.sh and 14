#include <iostream>
#include <unistd.h>
using namespace std;

int main() {
    
    pid_t pid = fork();

    if (pid < 0) {
        
        cerr << "Fork failed!" << endl;
        return 1;
    } else if (pid == 0) {
        
        cout << "Child Process:" << endl;
        cout << "Child PID: " << getpid() << endl;
        cout << "Parent PID: " << getppid() << endl;
    } else {
        
        cout << "Parent Process:" << endl;
        cout << "Parent PID: " << getpid() <<endl;
        cout << "Child PID: " << pid <<endl;
    }

    return 0;
}

2>write a program for switch case to input the bank account information of 3 person using shell programming
#!/bin/bash

# Function to input account information
input_account_info() {
    echo "Enter account holder's name:"
    read name
    echo "Enter account number:"
    read account_number
    echo "Enter bank name:"
    read bank_name
    echo "Enter balance:"
    read balance

    # Display the entered details
    echo "Account Holder: $name"
    echo "Account Number: $account_number"
    echo "Bank Name: $bank_name"
    echo "Balance: $balance"
}

echo "Select the account number to enter details:"
echo "1. Person 1"
echo "2. Person 2"
echo "3. Person 3"
read choice

case $choice in
    1)
        echo "Entering details for Person 1"
        input_account_info
        ;;
    2)
        echo "Entering details for Person 2"
        input_account_info
        ;;
    3)
        echo "Entering details for Person 3"
        input_account_info
        ;;
    *)
        echo "Invalid choice. Please enter a number between 1 and 3."
        ;;
esac
